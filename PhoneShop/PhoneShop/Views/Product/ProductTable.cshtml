@model PhoneShop.ViewModels.ProductSearchViewModel

<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
<script src="~/Scripts/jquery.cookie.js"></script>

<link href="~/Content/stylesheets/font-awesome.css" rel="stylesheet" />
<link href="~/Content/stylesheets/homeStyle.css" rel="stylesheet" />

<div>
    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>搜尋</label>
                    <input class="form-control" id="searchText" name="Search" value="@Model.SearchTerm" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>動作</label>
                    <div class="row">
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="searchBtn">搜尋</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="resetBtn">重設</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="newBtn">新增</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="font-weight-bold">名稱</th>
                <th class="font-weight-bold">品牌</th>
                <th class="font-weight-bold">價格</th>
                <th class="font-weight-bold" style="text-align: center">動作</th>
            </tr>
        </thead>
        <tbody style="height: 225px">
            @if (Model.Products != null && Model.Products.Count > 0)
            {
                foreach (var product in Model.Products)
                {
                    <tr style="height: 45px">
                        <td style="width: 40%">@product.Name</td>
                        <td style="width: 20%">@product.Category.Name</td>
                        <td style="width: 20%">@product.Price</td>
                        <td style="text-align: center; width: 20%; vertical-align: middle;">
                            <button class="editBtn" data-id="@product.ID">修改</button>
                            <button class="deleteBtn" data-id="@product.ID">刪除</button>
                        </td>
                    </tr>
                }

                //補到有5個tr
                for (int i = Model.Products.Count; i <= 5; i++)
                {
                    <tr style="height: 45px">
                    </tr>
                }
            }
            else
            {
                <tr style="height: 45px">
                    <td class="text-danger" colspan="4">產品為空</td>
                </tr>

                //補到有5個tr
                for (int i = 2; i <= 5; i++)
                {
                    <tr style="height: 45px">
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="col-md-12">
        @if (Model.Pager != null && Model.Pager.TotalPages > 1)
        {
            <div class="product-pagination text-center clearfix">
                <ul class="flat-pagination">
                    @if (Model.Pager.CurrentPage > 1)
                    {
                        <li class="prev">
                            <a data-href="@Url.Action("ProductTable", "Product", new { pageNo = Model.Pager.CurrentPage - 1})" class="pageDataLink" style="cursor: pointer;"><i class="fa fa-angle-left"></i></a>
                        </li>
                    }

                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                    {
                        string activeClass = Model.Pager.CurrentPage == page ? "active bg-info" : string.Empty;

                        <li class="@activeClass"><a data-href="@Url.Action("ProductTable", "Product", new { pageNo = page })" title="" class="pageDataLink" style="cursor: pointer;">@page</a></li>
                    }

                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                    {
                        <li><a data-href="@Url.Action("ProductTable", "Product", new { pageNo = Model.Pager.CurrentPage + 1})" class="pageDataLink" style="cursor: pointer;"><i class="fa fa-angle-right"></i></a></li>
                    }
                </ul>
            </div>
        }
    </div>
    <span style="color:Red; font-size: 16px; font-weight: bold; text-align: center; display:block;">@TempData["ProductMessage"]</span>
</div>

<script>
    //按下新增按鈕
    $("#newBtn").click(function () {
        $.ajax({
            url: '@Url.Action("Create", "Product")',
        })
        .done(function (response) {
            $("#actionContainer").html(response);
            focusAction("actionContainer");
        })
        .fail(function () {
            alert("FAIL");
        });
    });

    //按下修改按鈕
    $(".editBtn").click(function () {
        $.ajax({
            url: '@Url.Action("Edit", "Product")',
            data: {
                ID: $(this).attr("data-id")
            }
        })
        .done(function (response) {
            $("#actionContainer").html(response);
            focusAction("actionContainer");
        })
        .fail(function () {
            alert("FAIL");
        });
    });

    //按下刪除按鈕
    $(".deleteBtn").click(function () {
        swal({
            title: "確定?",
            text: "確定刪除此產品?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
        .then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Product")',
                    data: {
                        ID: $(this).attr("data-id")
                    }
                })
                .done(function (response) {
                    $("#tableContainer").html(response);
                    swal("刪除成功", {
                        icon: "success",
                    });
                })
                .fail(function () {
                    alert("FAIL");
                });
            }
        });
    });

    //按下搜尋按鈕時
    $("#searchBtn").click(function () {
		$.ajax({
			url: '@Url.Action("ProductTable", "Product")',
			data: {
                searchTerm: $("#searchText").val()
			}
		})
        .done(function (response) {
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
        })
        .fail(function () {
        	alert("FAIL");
        });
    });

    //按下重設按鈕時
    $("#resetBtn").click(function () {
		$.ajax({
			url: '@Url.Action("ProductTable", "Product")',
			data: {
                searchTerm: ""
			}
		})
        .done(function (response) {
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
        })
        .fail(function () {
        	alert("FAIL");
        });
    });

    //分頁選項點選時
    $(".pageDataLink").click(function () {
        var url = $(this).attr("data-href");
        if (url != "" || url != undefined) {
            $.ajax({
                url: url,
                data: {
                    searchTerm: $("#searchText").val()
                }
            })
            .done(function (response) {
                $("#tableContainer").html(response);
                $("#actionContainer").html("");
            })
            .fail(function () {
                alert("FAIL");
            })
        }
    });
</script>