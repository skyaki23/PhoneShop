@model PhoneShop.ViewModels.EditProductViewModel

@{
    var imageURL = !string.IsNullOrEmpty(Model.ImageURL) ? Model.ImageURL : "/Content/images/system/placeholder-image.png";
}

<h2>修改產品</h2>

<form id="editProduct">
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label>品牌</label>
                <select class="form-control" name="CategoryID">
                    @foreach (var category in Model.Categories)
                    {
                        var selected = category.ID == Model.CategoryID ? "selected" : string.Empty;
                        <option value="@category.ID" @selected>@category.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>名稱</label>
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label>價格</label>
                <input class="form-control" name="Price" value="@Model.Price" />
            </div>
            <div class="form-group">
                <label>圖片</label>
                <input type="hidden" id="ImageURL" name="ImageURL" />
                <input class="form-control" id="imageUpload" name="Image" type="file" accept=".png, .jpg" />
            </div>
            <button id="updateBtn" type="button" class="btn btn-primary">修改</button>
            <button id="cancelBtn" type="button" class="btn btn-primary">取消</button>
        </div>
        <div class="col-md-4">
            <div class="thumb">
                <img class="img-thumbnail img-fluid" id="productImage" src="@imageURL" />
            </div>
        </div>
    </div>
</form>

<script>
    //選擇圖片上傳
    $("#imageUpload").change(function () {
        var formData = new FormData();
        formData.append("Photo", this.files[0]);

        $.ajax({
            type: "POST",
            url: '@Url.Action("UploadImage", "Shared")',
            dataType: "json", // 傳回 JSON 資料類型
            data: formData,
            contentType: false, // 設定傳送資料至 Server 的編碼類型
            processData: false // 設定是否自動將 data 轉為 query string
        })
        .done(function (response) {
            if (response.Success) {
                $("#ImageURL").val(response.ImageURL);
                $("#productImage").attr("src", response.ImageURL); // 上傳的圖片取代掉原先的圖片
            }
        })
        .fail(function () {
            alert("FAIL");
        });
    });

    //驗證表單
    $("#editProduct").validate({
        rules: {
            Name: { // to Name element
                required: true,
                minlength: 1,
                maxlength: 50
            },
            Price: { // to Price element
                range: [1, 100000]
            }
        },
        messages: {
            Name: { // to Name element
                required: '名稱不可為空白',
                minlength: '名稱字數下限為1',
                maxlength: '名稱字數上限為50'
            },
            Price: { // to Price element
                range: '價錢上限至下限為1至100000元'
            }
        }
    });

    //按下修改按鈕
    $("#updateBtn").click(function () {
        if ($("#editProduct").valid()) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Edit", "Product")',
                data: $("#editProduct").serialize() // 序列化表單元素
             })
            .done(function (response) {
                $("#tableContainer").html(response);
                $("#actionContainer").html("");
                focusAction("tableContainer");
            })
            .fail(function () {
                swal({
                    title: "警告",
                    text: "請輸入所有欄位",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                });
            });
        }
        else {
            swal({
                title: "警告",
                text: "請輸入有效資料",
                icon: "warning",
                buttons: true,
                dangerMode: true
            });

            document.querySelector('#Name-error').style.color = 'red'; // 驗證錯誤，故會顯示文字，加入css
        }
    });

    //按下取消按鈕
    $("#cancelBtn").click(function () {
        $("#actionContainer").html("");
        focusAction("tableContainer");
    });
</script>